<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <mapped-superclass name="Positibe\Bundle\NewsBundle\Model\News" table="news_news">
        <indexes>
            <index name="search_idx" columns="slug"/>
        </indexes>
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="title" type="string" column="title" length="255"/>
        <field name="slug" type="string" column="slug" length="255">
            <gedmo:slug fields="title" unique="true"/>
        </field>
        <field name="abstract" type="text" column="abstract"/>
        <field name="content" type="text" column="content"/>
        <field name="enabled" type="boolean" column="enabled"/>
        <field name="publicationDateStart" type="datetime" column="publicationDateStart"/>
        <field name="createdAt" type="datetime" column="createdAt">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updatedAt">
            <gedmo:timestampable on="update"/>
        </field>
        <field name="commentsEnabled" type="boolean" column="commentsEnabled"/>
        <field name="commentsCloseAt" type="datetime" column="commentsCloseAt" nullable="true"/>
        <field name="commentsDefaultStatus" type="integer" column="commentsDefaultStatus"/>
        <field name="commentsCount" type="integer" column="commentsCount"/>
        <field name="countViews" type="integer" column="countViews"/>
        <one-to-many field="comments" target-entity="Positibe\Bundle\NewsBundle\Model\CommentInterface" mapped-by="news"
                     orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one
                field="image"
                target-entity="Application\Sonata\MediaBundle\Entity\Media"
                >
            <cascade>
                <cascade-all/>
            </cascade>
        </many-to-one>
        <many-to-many field="routes" target-entity="Positibe\Bundle\SeoBundle\Entity\SeoRoute" inversed-by="content"
                      orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="news_news_routes">
                <join-columns>
                    <join-column name="news_id" referenced-column-name="id" nullable="false" unique="false"
                                 on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="route_id" referenced-column-name="id" nullable="false" unique="false"
                                 on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <many-to-many target-entity="Positibe\Bundle\NewsBundle\Model\Tag" field="tags" inversed-by="newses">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-table name="news_news_tags">
                <join-columns>
                    <join-column name="news_id" referenced-column-name="id" nullable="false" unique="false"
                                 on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="tags_id" referenced-column-name="id" nullable="false" unique="false"
                                 on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </mapped-superclass>
</doctrine-mapping>
