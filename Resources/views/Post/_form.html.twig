{% form_theme form '@PositibeCmf/_metronic_material_theme.html.twig' %}

<div class="portlet light ">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-green-sharp bold uppercase"><i class="glyphicon glyphicon-pushpin"></i> Datos de la página</span>
        </div>
        <div class="actions btn-set">
            <a href="{{ path('positibe_post_index') }}"
               name="back" class="btn btn-default btn-circle"><i class="fa fa-angle-left"></i> Atras</a>
            <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-circle "><i
                        class="fa fa-reply"></i> Resetear</a>
            <button class="btn green-haze btn-circle" type="submit"><i class="fa fa-check"></i> Guardar</button>
            {% if post is defined and post.id is not null %}
                <a class="btn red-haze btn-circle" data-toggle="modal" href="#positibe_post_remove">
                    <i class="fa fa-trash"></i> Remover
                </a>
            {% endif %}
        </div>

    </div>
    <div class="portlet-body">
        <div class="tabbable-line tabbable-full-width">

            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#form_post_tab_basic" data-toggle="tab" aria-expanded="true">Información
                        básica</a>
                </li>
                <li class="">
                    <a href="#form_post_tab_seo" data-toggle="tab" aria-expanded="false">Meta</a>
                </li>
                <li class="pull-right">
                    {{ form_widget(form.locale, {'attr': {'class': 'dropdown pull-right btn btn-circle' }}) }}
                </li>
            </ul>
            <div class="tab-content">

                <div class="tab-pane active" id="form_post_tab_basic">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="form-group form-md-line-input" style="margin: 0 0 35px 0;padding-top: 20px;">
                                {{ form_widget(form.title) }}
                                <label for="form_control_1" style="left: 0;right: 0">Título</label>
                            </div>
                            <div class="form-group form-md-line-input" style="margin: 0 0 35px 0;padding-top: 30px;">
                                {{ form_widget(form.body) }}
                                <label for="form_control_1" style="left: 0;right: 0">Contenido</label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Datos de publicación
                                </div>
                                <div class="panel-body">
                                    {{ form_row(form.publishable) }}
                                    {{ form_row(form.featured) }}
                                    <div class="form-group form-md-line-input" style="margin: 0 0 35px 0;padding-top: 20px;">
                                        {{ form_widget(form.publishStartDate) }}
                                        <label for="form_control_1" style="left: 0;right: 0">Publicar a partir de</label>
                                    </div>
                                    <div class="form-group form-md-line-input" style="margin: 0 0 35px 0;padding-top: 20px;">
                                        {{ form_widget(form.publishEndDate) }}
                                        <label for="form_control_1" style="left: 0;right: 0">Despublicar a partir de</label>
                                    </div>
                                    {{ form_row(form.publishEndDate) }}
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Foto de portada
                                </div>
                                <div class="panel-body">
                                    {{ form_widget(form.image) }}
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Etiquetas
                                </div>
                                <div class="panel-body">
                                    {% if form.tags.tags is defined %}
                                        <div class="form-group form-md-line-input" style="margin: 0 0 35px 0;padding-top: 20px;">
                                            {{ form_widget(form.tags.tags) }}
                                            <label for="form_control_1" style="left: 0;right: 0">Añadir etiquetas</label>
                                        </div>
                                    {% endif %}
                                    <div class="form-group form-md-line-input" style="margin: 0 0 35px 0;padding-top: 20px;">
                                        {{ form_widget(form.tags.csv) }}
                                        <label for="form_control_1" style="left: 0;right: 0">Otras etiquetas</label>
                                        <span class="help-block">Separe las etiquetas por comas</span>
                                    </div>

                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Categorías
                                </div>
                                <div class="panel-body">
                                    {{ form_widget(form.collections) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="form_post_tab_image">

                </div>
                <div class="tab-pane" id="form_post_tab_seo">
                    {{ form_widget(form.routes) }}
                    {{ form_errors(form.seoMetadata) }}
                    {{ form_widget(form.seoMetadata) }}
                </div>
                <div class="tab-pane" id="form_post_tab_configuration">

                </div>
                <div class="tab-pane" id="form_post_tab_image">

                </div>
                <div class="tab-pane" id="form_post_tab_custom">

                </div>
            </div>
        </div>
        <div class="form-actions text-right">
            <hr>
            <a href="{{ path('positibe_post_index') }}" class="btn btn-default">Cancelar</a>
            <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
        </div>
    </div>
</div>