{% extends '@PositibeCmf/layout.html.twig' %}

    {% block title %}Etiquetas{% endblock %}
    {% block subtitle %}Crear nueva etiqueta{% endblock %}
    {% set menu_active = 'post' %}
    {% set content_menu = 'post_tag' %}

    {% block breadcrumb_list %}
        <li>
            <i class="fa fa-angle-right"></i>
            <a href="{{ path('positibe_post_tag_index') }}">Etiquetas</a>
        </li>
        <li>
            <i class="fa fa-angle-right"></i>
            Nueva etiqueta
        </li>
    {% endblock %}

    {% block content -%}

        {{ form_start(form,{'attr': {'class': 'form-horizontal inbox-compose' }}) }}
        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

        <div class="portlet light ">
            <div class="portlet-title tabbable-line">
                <div class="caption">
                    <i class="icon-globe theme-font hide"></i>
                    <span class="caption-subject font-green-sharp bold uppercase"><i class="fa  fa-tags"></i> Datos de la etiqueta</span>
                </div>
                <div class="actions btn-set">
                    <a href="{{ path('positibe_post_tag_index') }}"
                       name="back" class="btn btn-default btn-circle"><i class="fa fa-angle-left"></i> Atras</a>
                    <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-circle "><i
                                class="fa fa-reply"></i> Resetear</a>
                    <button class="btn green-haze btn-circle" type="submit"><i class="fa fa-check"></i> Guardar</button>
                    {% if post_tag is defined and post_tag.id is not null %}
                        <a class="btn red-haze btn-circle" data-toggle="modal" href="#positibe_post_tag_remove">
                            <i class="fa fa-trash"></i> Remover
                        </a>
                    {% endif %}
                </div>

            </div>
            <div class="portlet-body">
                <div class="tabbable">

                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#form_congress_tab_basic" data-toggle="tab" aria-expanded="true">Información
                                básica</a>
                        </li>
                    </ul>
                    <div class="tab-content">

                        <div class="tab-pane active" id="form_congress_tab_basic">
                            {{ form_widget(form) }}
                        </div>
                    </div>
                </div>
                <div class="form-actions text-right">
                    <hr>
                    <a href="{{ path('positibe_post_tag_index') }}" class="btn btn-default">Cancelar</a>
                    <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
                </div>
            </div>
        </div>


        {{ form_end(form) }}

    {% endblock -%}
