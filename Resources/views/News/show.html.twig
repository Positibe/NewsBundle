{% extends '::base.html.twig' %}

{% from 'PositibeClassificationBundle:Macros:tags.html.twig' import list_tags %}

{#{% block metas %}#}
    {#{{ positibe_seo_update(news) }}#}
    {#{{ parent() }}#}
{#{% endblock %}#}

{% block body -%}

    <h1>{{ news.title }}</h1>
    <div class="blog-tag-data">
        {% thumbnail news.image, 'big' %}
    </div>
    <div>
        <p>
            {{ news.content | raw }}
        </p>

        <div class="row">
            <div class="col-md-6">
                <ul class="list-inline blog-tags">
                    <li>
                        <i class="fa fa-tags"></i>
                        {{ list_tags(news.tags) }}
                    </li>
                </ul>
            </div>
            <div class="col-md-6 blog-tag-data-inner">
                <ul class="list-inline">
                    <li>
                        <i class="fa fa-calendar"></i>
                        <a href="#">
                            {{ news.publicationDateStart | localizeddate('long', 'none') }}
                        </a>
                    </li>
                    <li>
                        <i class="fa fa-comments"></i>
                        <a href="#news_list_comments">
                            {{ news.commentsCount }} Comments
                        </a>
                    </li>
                    <li>
                        <i class="fa fa-comments"></i>
                        {{ positibe_unique_views(news) }} Views
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <hr>
    <div class="media">
        <h3 id="news_list_comments">Comments</h3>
        <a class="pull-left" href="#">
            <img class="media-object" src="assets/img/blog/9.jpg" alt="">
        </a>

        {% for comment in news.comments %}
            <div class="media-body">
                <h4 class="media-heading">{{ comment.name }}
                    <small class="text-right"> {{ comment.updatedAt | localizeddate('long','none') }} /<a href="#">
                            Reply</a></small>
                </h4>
                <p>
                    {{ comment.message }}
                </p>
                <hr>

            </div>
        {% endfor %}
    </div>
    <!--end media-->

    <hr>
    <div class="post-comment">
        {{ render(path('positibe_news_news_comment_create', {'slug': news.slug})) }}
        {#controller('positibe_news.controller.comment:createAction', {'_sylius': {'factory':{'method':'createNewComment', 'arguments': '[$slug]' }}}#}
    </div>
{% endblock %}
